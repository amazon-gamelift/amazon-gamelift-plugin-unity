        <ui:VisualElement class="form-row">
            <ui:Label name="ContainerFleetInstanceTypeLabel" class="form-row__label--small" text="Instance type"/>
            <ui:Label name="ContainerFleetInstanceTypeValue" class="form-row__text-display"/>
