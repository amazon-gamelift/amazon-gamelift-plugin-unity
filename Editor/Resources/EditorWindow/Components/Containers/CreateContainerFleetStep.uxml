        <ui:VisualElement class="form-row">
            <ui:Label name="CGDDeployStatusLabel" class="form-row__label--small" text="Fleet status"/>
            <ui:VisualElement class="separator separator--horizontal separator--centered">
                <gl:StatusIndicator/>
