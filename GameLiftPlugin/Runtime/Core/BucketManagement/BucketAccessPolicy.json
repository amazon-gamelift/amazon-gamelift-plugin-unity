{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3ServerAccessLogsPolicy",
      "Effect": "Allow",
      "Principal": {
        "Service": "logging.s3.amazonaws.com"
      },
      "Action": [
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::{0}/{1}*",
      "Condition": {
        "ArnLike": {
          "aws:SourceArn": "arn:aws:s3:::{2}"
        },
        "StringEquals": {
          "aws:SourceAccount": "{3}"
        }
      }
    }
  ]
}
